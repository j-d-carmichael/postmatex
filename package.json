{
  "name": "postmatex",
  "version": "1.7.4",
  "description": "Fork of original into typescript: A powerful, simple, promise-based postMessage library",
  "scripts": {
    "build:tocs": "npx doctoc .",
    "build": "rm -fR ./build && tsc -p . --declaration --declarationDir build && npm run build:readme",
    "build:watch": "tsc --watch -p .",
    "build:readme": "node ./scripts/update-readme.js",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "format": "prettier 'src/**/*.(ts|json)' --write",
    "test": "npm run test:unit && npm run test:acceptance && npm run test:es-check",
    "test:es-check": "es-check es5 build/postmate.min.js",
    "test:unit": "NODE_ENV=test jest --runInBand",
    "test:unit:single": "NODE_ENV=test jest --collect-coverage false",
    "test:acceptance": "gulp test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "codecov": "^3.7.2",
    "eslint": "^7.10.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "gulp": "^4.0.2",
    "gzip-size": "^5.1.1",
    "jest": "^26.6.1",
    "mocha": "^8.2.0",
    "mocha-phantomjs": "^4.1.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johndcarmichael/postmatex.git"
  },
  "keywords": [
    "postMessage",
    "secure",
    "handshake",
    "promise",
    "iframes",
    "pci",
    "security"
  ],
  "author": "John Carmichael",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johndcarmichael/postmatex/issues"
  },
  "homepage": "https://github.com/johndcarmichael/postmatex",
  "browserslist": [
    "defaults",
    "ie >= 11"
  ]
}
